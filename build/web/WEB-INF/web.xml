<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>DefaultFlightHandler</servlet-name>
        <servlet-class>controller.DefaultFlightHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeUpdate</servlet-name>
        <servlet-class>controller.EmployeeUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCountryController</servlet-name>
        <servlet-class>controller.DeleteCountryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeDelete</servlet-name>
        <servlet-class>controller.EmployeeDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteFlightDetails</servlet-name>
        <servlet-class>controller.DeleteFlightDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>asdasd</servlet-name>
        <servlet-class>controller.asdasd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DefaultFlightHandler</servlet-name>
        <url-pattern>/DefaultFlightHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeUpdate</servlet-name>
        <url-pattern>/EmployeeUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeDelete</servlet-name>
        <url-pattern>/EmployeeDelete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>controller.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>controller.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FlightDetailsHandler</servlet-name>
        <servlet-class>controller.FlightDetailsHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlightDetailsHandler</servlet-name>
        <url-pattern>/FlightDetailsHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCountryController</servlet-name>
        <url-pattern>/DeleteCountryController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteFlightDetails</servlet-name>
        <url-pattern>/DeleteFlightDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>asdasd</servlet-name>
        <url-pattern>/asdasd</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
